# Elastic Beanstalk nginx configuration
# This increases the maximum request body size to handle large file uploads
# Default is 1MB, we're increasing it to 50MB to match Express.js limit

files:
  "/etc/nginx/conf.d/proxy.conf":
    mode: "000644"
    owner: root
    group: root
    content: |
      client_max_body_size 50M;
